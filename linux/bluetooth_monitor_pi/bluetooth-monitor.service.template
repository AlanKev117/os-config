[Unit]
Description=Bluetooth monitor service
After=multi-user.target network.target pigpiod.service
Requires=pigpiod.service

[Service]
Type=simple
Environment=GPIO_LED_PIN={GPIO_LED_PIN}
Environment=GPIO_BUTTON_PIN={GPIO_BUTTON_PIN}
Environment=DEVICE_MAC_ADDRESS={DEVICE_MAC_ADDRESS}
ExecStart=/usr/bin/python3 {SERVICE_DIR}/bluetooth_monitor.py
Restart=on-failure
User=alan

[Install]
WantedBy=multi-user.target
